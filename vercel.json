{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "FLASK_ENV": "production",
        "FLASK_APP": "app.py",
        "FLASK_DEBUG": "0",
        "PYTHONUNBUFFERED": "1",
        "SQLALCHEMY_ECHO": "true",
        "VERCEL_ENV": "production",
        "SQLALCHEMY_DATABASE_URI": "sqlite:////tmp/bgmi_keys.db"
    },
    "functions": {
        "app.py": {
            "memory": 2048,
            "maxDuration": 60
        }
    }
} 